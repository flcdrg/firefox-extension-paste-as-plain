{
  "manifest_version": 2,
  "name": "Paste as Plain Text",
  "version": "1.0",
  "description": "Adds a 'Paste as plain text' option to the context menu for editable fields",
  "developer": {
    "name": "David Gardiner",
    "url": "https://david.gardiner.net.au"
  },
  "author": "David Gardiner",
  "homepage_url": "https://github.com/flcdrg/firefox-extension-paste-as-plain",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardRead"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "paste-as-plain-text@david.gardinerfamily.au",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}